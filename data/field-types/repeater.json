{
  "name": "repeater",
  "label": "Repeater Field",
  "description": "Repeater fields allow you to define repeatable groups of fields, such as galleries or lists.",
  "field_type": "repeater",
  "examples": [
    {
      "name": "basic_repeater",
      "label": "Basic Repeater",
      "description": "Simple repeater with title and image fields",
      "field": {
        "field": "repeater",
        "name": "banners",
        "label": "Banners",
        "multilanguage": false,
        "attribute": {
          "min": 1,
          "max": 5,
          "caption": "Add banner items",
          "fields": [
            {
              "field": "input",
              "name": "title",
              "label": "Title",
              "multilanguage": false,
              "attribute": {
                "is_required": false,
                "type": "text",
                "placeholder": "Enter title"
              }
            },
            {
              "name": "image",
              "label": "Image",
              "field": "media",
              "multilanguage": false,
              "attribute": {
                "accept": ["image"]
              }
            }
          ]
        }
      }
    },
    {
      "name": "nested_repeater",
      "label": "Nested Repeater",
      "description": "Repeater with nested repeater fields",
      "field": {
        "field": "repeater",
        "name": "galleries",
        "label": "Galleries",
        "multilanguage": false,
        "attribute": {
          "min": 1,
          "max": 5,
          "fields": [
            {
              "field": "repeater",
              "name": "images",
              "label": "Images",
              "multilanguage": false,
              "attribute": {
                "min": 1,
                "max": 5,
                "fields": [
                  {
                    "field": "media",
                    "name": "image",
                    "label": "Image",
                    "multilanguage": false,
                    "attribute": {
                      "accept": ["image"]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    },
    {
      "name": "complex_repeater",
      "label": "Complex Repeater",
      "description": "Repeater with multiple field types",
      "field": {
        "field": "repeater",
        "name": "features",
        "label": "Features",
        "attribute": {
          "min": 1,
          "max": 6,
          "caption": "Add feature items",
          "fields": [
            {
              "name": "icon",
              "label": "Icon",
              "field": "select",
              "attribute": {
                "options": [
                  {"value": "Star", "label": "Star"},
                  {"value": "Check", "label": "Check"},
                  {"value": "Heart", "label": "Heart"}
                ]
              }
            },
            {
              "name": "title",
              "label": "Title",
              "field": "input",
              "multilanguage": true,
              "attribute": {
                "type": "text",
                "is_required": true,
                "placeholder": "Feature title"
              }
            },
            {
              "name": "description",
              "label": "Description",
              "field": "textarea",
              "multilanguage": true,
              "attribute": {
                "rows": 3,
                "placeholder": "Feature description"
              }
            }
          ]
        }
      }
    }
  ],
  "properties": {
    "field_properties": {
      "name": {
        "type": "string",
        "description": "Unique key for the field",
        "required": true,
        "example": "gallery"
      },
      "label": {
        "type": "string",
        "description": "Human-readable label for the field",
        "required": true,
        "example": "Gallery"
      },
      "field": {
        "type": "string",
        "description": "Field type (always 'repeater' for repeater)",
        "required": true,
        "example": "repeater"
      },
      "multilanguage": {
        "type": "boolean",
        "description": "Enable multilanguage support (tabs in UI)",
        "required": false,
        "example": false
      }
    },
    "attribute_properties": {
      "fields": {
        "type": "array",
        "description": "Array of field definitions to repeat",
        "required": true,
        "items": {
          "type": "object",
          "description": "Field definition object"
        },
        "example": [
          {
            "field": "input",
            "name": "title",
            "label": "Title",
            "attribute": {
              "type": "text",
              "placeholder": "Enter title"
            }
          }
        ]
      },
      "min": {
        "type": "number",
        "description": "Minimum number of items",
        "required": false,
        "example": 1
      },
      "max": {
        "type": "number",
        "description": "Maximum number of items",
        "required": false,
        "example": 10
      },
      "caption": {
        "type": "string",
        "description": "Helper/caption text shown below the field",
        "required": false,
        "example": "Add images"
      }
    }
  }
} 