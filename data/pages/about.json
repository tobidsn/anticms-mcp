{
  "name": "about",
  "label": "About Us",
  "is_content": false,
  "multilanguage": true,
  "is_multiple": true,
  "description": "About page template with Hero and Professional Services sections",
  "components": [
    {
      "keyName": "section_hero",
      "label": "Hero Section",
      "section": "1",
      "block": "Hero",
      "fields": [
        {
          "name": "status",
          "label": "Enable Section",
          "field": "toggle",
          "attribute": {
            "defaultValue": true,
            "caption": "Enable or disable the hero section"
          }
        },
        {
          "name": "smallTitle",
          "label": "Small Title",
          "field": "input",
          "multilanguage": true,
          "attribute": {
            "type": "text",
            "is_required": false,
            "placeholder": "Enter small title",
            "defaultValue": "About Our Company",
            "maxLength": 50,
            "caption": "Small title displayed above main title"
          }
        },
        {
          "name": "mainTitle",
          "label": "Main Title",
          "field": "input",
          "multilanguage": true,
          "attribute": {
            "type": "text",
            "is_required": true,
            "placeholder": "Enter main title",
            "defaultValue": "Your trusted partner for professional home services",
            "maxLength": 200,
            "caption": "Main hero title"
          }
        },
        {
          "name": "description",
          "label": "Description",
          "field": "texteditor",
          "multilanguage": true,
          "attribute": {
            "type": "simple",
            "rows": 5,
            "is_required": false,
            "placeholder": "Enter description",
            "caption": "Hero description text",
            "defaultValue": "Learn more about our company, our mission, and our commitment to providing exceptional home services to our valued customers."
          }
        },
        {
          "name": "ctaButtonText",
          "label": "CTA Button Text",
          "field": "input",
          "multilanguage": true,
          "attribute": {
            "type": "text",
            "is_required": false,
            "placeholder": "Enter button text",
            "defaultValue": "Contact Us",
            "maxLength": 30,
            "caption": "Call to action button text"
          }
        },
        {
          "name": "highlights",
          "label": "Highlights",
          "field": "repeater",
          "attribute": {
            "min": 1,
            "max": 5,
            "caption": "Hero highlight items",
            "fields": [
              {
                "name": "text",
                "label": "Highlight Text",
                "field": "input",
                "multilanguage": true,
                "attribute": {
                  "type": "text",
                  "is_required": true,
                  "placeholder": "Enter highlight text",
                  "maxLength": 50,
                  "caption": "Use \\n for line breaks"
                }
              },
              {
                "name": "delay",
                "label": "Animation Delay",
                "field": "input",
                "attribute": {
                  "type": "number",
                  "is_required": false,
                  "placeholder": "Enter delay in seconds",
                  "defaultValue": 1,
                  "min": 0,
                  "max": 5,
                  "step": 0.1,
                  "caption": "Animation delay in seconds"
                }
              }
            ],
            "defaultValue": [
              {
                "text": "Trusted\nProfessionals",
                "delay": 1
              },
              {
                "text": "Years of\nExperience",
                "delay": 1.1
              },
              {
                "text": "Customer\nFocused",
                "delay": 1.2
              },
              {
                "text": "Quality Guaranteed",
                "delay": 1.3
              }
            ]
          }
        },
        {
          "name": "leftImage",
          "label": "Left Image",
          "field": "media",
          "attribute": {
            "accept": ["image"],
            "caption": "Left hero image"
          }
        },
        {
          "name": "rightImage",
          "label": "Right Image",
          "field": "media",
          "attribute": {
            "accept": ["image"],
            "caption": "Right hero image"
          }
        }
      ]
    },
    {
      "keyName": "section_professional_services",
      "label": "Professional Services",
      "section": "2",
      "block": "ProfessionalServices",
      "fields": [
        {
          "name": "status",
          "label": "Enable Section",
          "field": "toggle",
          "attribute": {
            "defaultValue": true,
            "caption": "Enable or disable the professional services section"
          }
        },
        {
          "name": "title",
          "label": "Section Title",
          "field": "input",
          "multilanguage": true,
          "attribute": {
            "type": "text",
            "is_required": false,
            "placeholder": "Enter section title",
            "defaultValue": "Our commitment to excellence in home services",
            "maxLength": 100
          }
        },
        {
          "name": "description",
          "label": "Section Description",
          "field": "textarea",
          "multilanguage": true,
          "attribute": {
            "rows": 3,
            "is_required": false,
            "placeholder": "Enter section description",
            "defaultValue": "With years of experience serving homeowners across the region, we pride ourselves on delivering professional, reliable, and comprehensive home services."
          }
        },
        {
          "name": "features",
          "label": "Company Values Column 1",
          "field": "repeater",
          "attribute": {
            "min": 1,
            "max": 5,
            "caption": "First column company values",
            "fields": [
              {
                "name": "text",
                "label": "Value Text",
                "field": "input",
                "multilanguage": true,
                "attribute": {
                  "type": "text",
                  "is_required": true,
                  "placeholder": "Enter company value"
                }
              }
            ],
            "defaultValue": [
              {"text": "Professional Excellence"},
              {"text": "Customer Satisfaction"},
              {"text": "Reliable Service"}
            ]
          }
        },
        {
          "name": "featuresSection2",
          "label": "Company Values Column 2",
          "field": "repeater",
          "attribute": {
            "min": 1,
            "max": 5,
            "caption": "Second column company values",
            "fields": [
              {
                "name": "text",
                "label": "Value Text",
                "field": "input",
                "multilanguage": true,
                "attribute": {
                  "type": "text",
                  "is_required": true,
                  "placeholder": "Enter company value"
                }
              }
            ],
            "defaultValue": [
              {"text": "Licensed & Insured"},
              {"text": "Competitive Pricing"},
              {"text": "Quality Guarantee"}
            ]
          }
        },
        {
          "name": "contactNote",
          "label": "Contact Note",
          "field": "group",
          "attribute": {
            "fields": [
              {
                "name": "text",
                "label": "Note Text",
                "field": "textarea",
                "multilanguage": true,
                "attribute": {
                  "rows": 2,
                  "placeholder": "Contact note text",
                  "defaultValue": "Ready to discuss your project? Contact our team today for a consultation and personalized quote."
                }
              },
              {
                "name": "phoneNumber",
                "label": "Phone Number",
                "field": "input",
                "attribute": {
                  "type": "text",
                  "placeholder": "Phone number",
                  "defaultValue": "(888) 617-5894"
                }
              }
            ]
          }
        }
      ]
    }
  ]
}
