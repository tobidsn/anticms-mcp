{
  "name": "homepage",
  "label": "Homepage Template",
  "is_content": false,
  "multilanguage": true,
  "is_multiple": false,
  "description": "Homepage template generated from Figma metadata with intelligent content detection",
  "components": [
    {
      "keyName": "hero",
      "label": "Hero Section",
      "section": "1",
      "fields": [
        {
          "name": "status",
          "label": "Status",
          "field": "toggle",
          "attribute": {
            "caption": "Enable or disable the hero section",
            "defaultValue": true,
            "value": null
          }
        },
        {
          "name": "background_image",
          "label": "Background Image",
          "field": "media",
          "attribute": {
            "accept": [
              "image"
            ],
            "resolution": {
              "minWidth": 1200,
              "maxWidth": 1920,
              "minHeight": 600,
              "maxHeight": 1080
            },
            "caption": "Recommended resolution: 1920x1080px"
          }
        },
        {
          "name": "scroll_indicator",
          "label": "Scroll Indicator",
          "field": "toggle",
          "attribute": {
            "caption": "Show/hide scroll indicator",
            "defaultValue": true,
            "value": null
          }
        }
      ],
      "block": "Hero"
    },
    {
      "keyName": "about",
      "label": "About Section",
      "section": "2",
      "fields": [
        {
          "name": "status",
          "label": "Status",
          "field": "toggle",
          "attribute": {
            "caption": "Enable or disable the about section",
            "defaultValue": true,
            "value": null
          }
        },
        {
          "name": "section_title",
          "label": "Section Title",
          "field": "input",
          "multilanguage": true,
          "attribute": {
            "type": "text",
            "maxLength": 100,
            "placeholder": "About Us",
            "is_required": false,
            "defaultValue": "",
            "value": null,
            "minLength": 1
          }
        },
        {
          "name": "description",
          "label": "Description",
          "field": "textarea",
          "multilanguage": true,
          "attribute": {
            "rows": 4,
            "max": 500,
            "cols": 10,
            "is_required": false,
            "caption": "Short description of the our services section",
            "defaultValue": "",
            "value": null,
            "placeholder": "Enter about description"
          }
        }
      ],
      "block": "About"
    },
    {
      "keyName": "gallery",
      "label": "Gallery Section",
      "section": "3",
      "fields": [
        {
          "name": "section_title",
          "label": "Gallery Title",
          "field": "input",
          "multilanguage": true,
          "attribute": {
            "type": "text",
            "maxLength": 100,
            "placeholder": "Gallery section title",
            "is_required": false,
            "defaultValue": "",
            "value": null,
            "minLength": 1
          }
        },
        {
          "name": "gallery_images",
          "label": "Gallery Images",
          "field": "repeater",
          "attribute": {
            "min": 1,
            "max": 12,
            "caption": "Add gallery images",
            "fields": [
              {
                "name": "image",
                "label": "Image",
                "field": "media",
                "attribute": {
                  "accept": [
                    "image"
                  ],
                  "resolution": {
                    "minWidth": 400,
                    "maxWidth": 1200,
                    "minHeight": 300,
                    "maxHeight": 800
                  }
                }
              },
              {
                "name": "caption",
                "label": "Image Caption",
                "field": "input",
                "multilanguage": true,
                "attribute": {
                  "type": "text",
                  "placeholder": "Optional image caption",
                  "is_required": false,
                  "defaultValue": "",
                  "value": null,
                  "maxLength": 50,
                  "minLength": 1
                }
              }
            ]
          }
        }
      ],
      "block": "Gallery"
    },
    {
      "keyName": "brands",
      "label": "Brands Section",
      "section": "4",
      "fields": [
        {
          "name": "status",
          "label": "Status",
          "field": "toggle",
          "attribute": {
            "caption": "Enable or disable the brands section",
            "defaultValue": true,
            "value": null
          }
        },
        {
          "name": "section_title",
          "label": "Section Title",
          "field": "input",
          "multilanguage": true,
          "attribute": {
            "type": "text",
            "maxLength": 100,
            "placeholder": "Enter brands section title",
            "is_required": false,
            "defaultValue": "",
            "value": null,
            "minLength": 1
          }
        },
        {
          "name": "content",
          "label": "Content",
          "field": "texteditor",
          "multilanguage": true,
          "attribute": {
            "type": "full",
            "rows": 10,
            "cols": 10,
            "is_required": false,
            "defaultValue": "",
            "value": null,
            "max": 255,
            "placeholder": "Enter brands content"
          }
        }
      ],
      "block": "Brands"
    },
    {
      "keyName": "services",
      "label": "Services Section",
      "section": "5",
      "fields": [
        {
          "name": "status",
          "label": "Status",
          "field": "toggle",
          "attribute": {
            "caption": "Enable or disable the services section",
            "defaultValue": true,
            "value": null
          }
        },
        {
          "name": "section_title",
          "label": "Section Title",
          "field": "input",
          "multilanguage": true,
          "attribute": {
            "type": "text",
            "maxLength": 100,
            "placeholder": "Enter services section title",
            "is_required": false,
            "defaultValue": "",
            "value": null,
            "minLength": 1
          }
        },
        {
          "name": "services",
          "label": "Services",
          "field": "post_related",
          "attribute": {
            "is_required": false,
            "api_prefix": "/api/v1/",
            "post_type": "service",
            "max": 12,
            "min": 1,
            "caption": "Select services to display in this section"
          }
        }
      ],
      "block": "Services"
    },
    {
      "keyName": "events",
      "label": "Events Section",
      "section": "6",
      "fields": [
        {
          "name": "status",
          "label": "Status",
          "field": "toggle",
          "attribute": {
            "caption": "Enable or disable the events section",
            "defaultValue": true,
            "value": null
          }
        },
        {
          "name": "section_title",
          "label": "Section Title",
          "field": "input",
          "multilanguage": true,
          "attribute": {
            "type": "text",
            "maxLength": 100,
            "placeholder": "Enter events section title",
            "is_required": false,
            "defaultValue": "",
            "value": null,
            "minLength": 1
          }
        },
        {
          "name": "events",
          "label": "Events",
          "field": "post_related",
          "attribute": {
            "is_required": false,
            "api_prefix": "/api/v1/",
            "post_type": "event",
            "max": 12,
            "min": 1,
            "caption": "Select events to display in this section"
          }
        }
      ],
      "block": "Events"
    },
    {
      "keyName": "our_stories",
      "label": "Our stories Section",
      "section": "7",
      "fields": [
        {
          "name": "status",
          "label": "Status",
          "field": "toggle",
          "attribute": {
            "caption": "Enable or disable the our_stories section",
            "defaultValue": true,
            "value": null
          }
        },
        {
          "name": "section_title",
          "label": "Section Title",
          "field": "input",
          "multilanguage": true,
          "attribute": {
            "type": "text",
            "maxLength": 100,
            "placeholder": "Enter our_stories section title",
            "is_required": false,
            "defaultValue": "",
            "value": null,
            "minLength": 1
          }
        },
        {
          "name": "stories",
          "label": "Stories",
          "field": "post_related",
          "attribute": {
            "is_required": false,
            "api_prefix": "/api/v1/",
            "post_type": "story",
            "max": 12,
            "min": 1,
            "caption": "Select our_stories to display in this section"
          }
        }
      ],
      "block": "OurStories"
    },
    {
      "keyName": "call_to_action",
      "label": "Call to action Section",
      "section": "8",
      "fields": [
        {
          "name": "status",
          "label": "Status",
          "field": "toggle",
          "attribute": {
            "caption": "Enable or disable the call_to_action section",
            "defaultValue": true,
            "value": null
          }
        },
        {
          "name": "section_title",
          "label": "Section Title",
          "field": "input",
          "multilanguage": true,
          "attribute": {
            "type": "text",
            "maxLength": 100,
            "placeholder": "Enter call_to_action section title",
            "is_required": false,
            "defaultValue": "",
            "value": null,
            "minLength": 1
          }
        },
        {
          "name": "content",
          "label": "Content",
          "field": "texteditor",
          "multilanguage": true,
          "attribute": {
            "type": "full",
            "rows": 10,
            "cols": 10,
            "is_required": false,
            "defaultValue": "",
            "value": null,
            "max": 255,
            "placeholder": "Enter call_to_action content"
          }
        }
      ],
      "block": "CallToAction"
    }
  ]
}