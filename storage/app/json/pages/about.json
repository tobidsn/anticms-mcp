    {
      "keyName": "Call to Action_section",
      "label": "Call to Action Section",
      "section": "1",
      "fields": [
        {
          "name": "status",
          "label": "Status",
          "field": "toggle",
          "attribute": {
            "caption": "Enable or disable the Call to Action section",
            "defaultValue": true,
            "value": null
          }
        },
        {
          "name": "section_title",
          "label": "Section Title",
          "field": "input",
          "multilanguage": true,
          "attribute": {
            "type": "text",
            "maxLength": 100,
            "placeholder": "Enter Call to Action section title",
            "is_required": false,
            "defaultValue": "",
            "value": null,
            "minLength": 1
          }
        },
        {
          "name": "content",
          "label": "Content",
          "field": "texteditor",
          "multilanguage": true,
          "attribute": {
            "type": "full",
            "rows": 10,
            "cols": 10,
            "is_required": false,
            "defaultValue": "",
            "value": null,
            "max": 255,
            "placeholder": "Enter Call to Action content"
          }
        }
      ],
      "block": "Call to Action"
    },
