        {
          "name": "status",
          "label": "Status",
          "field": "toggle",
          "attribute": {
            "caption": "Enable or disable the services section",
            "defaultValue": true,
            "value": null
          }
        },
        {
          "name": "section_title",
          "label": "Section Title",
          "field": "input",
          "multilanguage": true,
          "attribute": {
            "type": "text",
            "maxLength": 100,
            "placeholder": "Our Services",
            "is_required": false,
            "defaultValue": "Our Services",
            "value": null,
            "minLength": 1
          }
        },
        {
          "name": "services",
          "label": "Services",
          "field": "repeater",
          "attribute": {
            "min": 1,
            "max": 8,
            "caption": "Add services items",
            "fields": [
              {
                "name": "title",
                "label": "Service Title",
                "field": "input",
                "multilanguage": true,
                "attribute": {
                  "type": "text",
                  "maxLength": 100,
                  "placeholder": "Service name",
                  "is_required": true,
                  "defaultValue": "",
                  "value": null,
                  "minLength": 1
                }
              },
              {
                "name": "description",
                "label": "Service Description",
                "field": "textarea",
                "multilanguage": true,
                "attribute": {
                  "rows": 3,
                  "max": 500,
                  "cols": 10,
                  "is_required": false,
                  "caption": "Short description of the our services section",
                  "defaultValue": "",
                  "value": null,
                  "placeholder": "Service description"
                }
              },
              {
                "name": "icon",
                "label": "Service Icon",
                "field": "media",
                "attribute": {
                  "accept": [
                    "image"
                  ],
                  "resolution": {
                    "minWidth": 32,
                    "maxWidth": 64,
                    "minHeight": 32,
                    "maxHeight": 64
                  }
                }
              },
              {
                "name": "link",
                "label": "Learn More Link",
                "field": "input",
                "attribute": {
                  "type": "url",
                  "placeholder": "/services/service-name",
                  "is_required": false,
                  "defaultValue": "",
                  "value": null,
                  "maxLength": 50,
                  "minLength": 1
                }
              }
            ]
          }
        }
      ],
      "block": "Services"
    },
