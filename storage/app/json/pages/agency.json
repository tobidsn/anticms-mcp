{
  "name": "agency",
  "label": "Agency",
  "is_content": false,
  "multilanguage": true,
  "is_multiple": false,
  "description": "Business Agency website template with hero section, services, capabilities, projects showcase, testimonials, and contact form",
  "components": [
    {
      "keyName": "hero_section",
      "label": "Hero Section",
      "section": "1",
      "fields": [
        {
          "name": "status",
          "label": "Status",
          "field": "toggle",
          "attribute": {
            "caption": "Enable or disable the hero section",
            "defaultValue": true
          }
        },
        {
          "name": "award_badge",
          "label": "Award Badge",
          "field": "group",
          "attribute": {
            "caption": "Award or certification badge",
            "fields": [
              {
                "name": "badge_text",
                "label": "Badge Text",
                "field": "input",
                "multilanguage": true,
                "attribute": {
                  "type": "text",
                  "placeholder": "Best Business Platform - World Record 2021",
                  "defaultValue": "Best Business Platform - World Record 2021"
                }
              },
              {
                "name": "badge_icon",
                "label": "Badge Icon",
                "field": "media",
                "attribute": {
                  "accept": ["image"],
                  "caption": "Verification or award icon"
                }
              }
            ]
          }
        },
        {
          "name": "main_heading",
          "label": "Main Heading",
          "field": "textarea",
          "multilanguage": true,
          "attribute": {
            "rows": 3,
            "placeholder": "Reach Your Business Goals in Record Time",
            "max": 200,
            "caption": "Large heading text - Ubuntu Bold, 58px, tracking 1.16px"
          }
        },
        {
          "name": "description",
          "label": "Description",
          "field": "textarea",
          "multilanguage": true,
          "attribute": {
            "rows": 4,
            "placeholder": "Support small business and join the nationwide movement to encourage commercial support for the millions of minority owned businesses helping world economy.",
            "max": 500,
            "caption": "Hero description text - Ubuntu Regular, 20px"
          }
        },
        {
          "name": "primary_cta",
          "label": "Primary CTA Button",
          "field": "group",
          "attribute": {
            "caption": "Main call-to-action button",
            "fields": [
              {
                "name": "button_text",
                "label": "Button Text",
                "field": "input",
                "multilanguage": true,
                "attribute": {
                  "type": "text",
                  "placeholder": "Get Started",
                  "defaultValue": "Get Started"
                }
              },
              {
                "name": "button_url",
                "label": "Button URL",
                "field": "input",
                "attribute": {
                  "type": "url",
                  "placeholder": "/get-started"
                }
              }
            ]
          }
        },
        {
          "name": "secondary_cta",
          "label": "Secondary CTA Button",
          "field": "group",
          "attribute": {
            "caption": "Watch video or secondary action button",
            "fields": [
              {
                "name": "button_text",
                "label": "Button Text",
                "field": "input",
                "multilanguage": true,
                "attribute": {
                  "type": "text",
                  "placeholder": "Watch Video",
                  "defaultValue": "Watch Video"
                }
              },
              {
                "name": "button_url",
                "label": "Button URL",
                "field": "input",
                "attribute": {
                  "type": "url",
                  "placeholder": "/video"
                }
              },
              {
                "name": "button_icon",
                "label": "Button Icon",
                "field": "media",
                "attribute": {
                  "accept": ["image"],
                  "caption": "Play button or similar icon"
                }
              }
            ]
          }
        },
        {
          "name": "hero_image",
          "label": "Hero Image",
          "field": "media",
          "attribute": {
            "accept": ["image"],
            "caption": "Main hero image with decorative elements (416x496px recommended)",
            "resolution": {
              "minWidth": 400,
              "maxWidth": 500,
              "minHeight": 450,
              "maxHeight": 550
            }
          }
        },
        {
          "name": "rating_widget",
          "label": "Rating Widget",
          "field": "group",
          "attribute": {
            "caption": "Customer rating display",
            "fields": [
              {
                "name": "rating_score",
                "label": "Rating Score",
                "field": "input",
                "attribute": {
                  "type": "text",
                  "placeholder": "4.9",
                  "defaultValue": "4.9"
                }
              },
              {
                "name": "customer_avatars",
                "label": "Customer Avatars",
                "field": "repeater",
                "attribute": {
                  "min": 3,
                  "max": 5,
                  "fields": [
                    {
                      "name": "avatar",
                      "label": "Customer Avatar",
                      "field": "media",
                      "attribute": {
                        "accept": ["image"],
                        "caption": "Customer profile image (40x40px)"
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      ]
    },
