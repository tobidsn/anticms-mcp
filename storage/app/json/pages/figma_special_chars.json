{
  "name": "figma_special_chars",
  "label": "Figma Special Characters",
  "is_content": false,
  "multilanguage": true,
  "is_multiple": false,
  "description": "Template with special characters",
  "components": [
    {
      "keyName": "section@home_section",
      "label": "Section@home Section",
      "section": "1",
      "fields": [
        {
          "name": "status",
          "label": "Status",
          "field": "toggle",
          "attribute": {
            "caption": "Enable or disable the section@home section",
            "defaultValue": true,
            "value": null
          }
        },
        {
          "name": "section_title",
          "label": "Section Title",
          "field": "input",
          "multilanguage": true,
          "attribute": {
            "type": "text",
            "maxLength": 100,
            "placeholder": "Enter section@home section title",
            "is_required": false,
            "defaultValue": "",
            "value": null,
            "minLength": 1
          }
        },
        {
          "name": "content",
          "label": "Content",
          "field": "texteditor",
          "multilanguage": true,
          "attribute": {
            "type": "full",
            "rows": 10,
            "cols": 10,
            "is_required": false,
            "defaultValue": "",
            "value": null,
            "max": 255,
            "placeholder": "Enter section@home content"
          }
        }
      ],
      "block": "Section@home"
    },
    {
      "keyName": "about-us & team_section",
      "label": "About us & team Section",
      "section": "2",
      "fields": [
        {
          "name": "status",
          "label": "Status",
          "field": "toggle",
          "attribute": {
            "caption": "Enable or disable the about-us & team section",
            "defaultValue": true,
            "value": null
          }
        },
        {
          "name": "section_title",
          "label": "Section Title",
          "field": "input",
          "multilanguage": true,
          "attribute": {
            "type": "text",
            "maxLength": 100,
            "placeholder": "Meet Our Team",
            "is_required": false,
            "defaultValue": "",
            "value": null,
            "minLength": 1
          }
        },
        {
          "name": "description",
          "label": "Description",
          "field": "textarea",
          "multilanguage": true,
          "attribute": {
            "rows": 4,
            "max": 500,
            "cols": 10,
            "is_required": false,
            "caption": "Short description of the our services section",
            "defaultValue": "",
            "value": null,
            "placeholder": "Enter about-us & team description"
          }
        },
        {
          "name": "team_members",
          "label": "Team Members",
          "field": "repeater",
          "attribute": {
            "min": 1,
            "max": 12,
            "caption": "Add team members",
            "fields": [
              {
                "name": "name",
                "label": "Name",
                "field": "input",
                "multilanguage": false,
                "attribute": {
                  "type": "text",
                  "maxLength": 50,
                  "placeholder": "Team member name",
                  "is_required": true,
                  "defaultValue": "",
                  "value": null,
                  "minLength": 1
                }
              },
              {
                "name": "position",
                "label": "Position",
                "field": "input",
                "multilanguage": true,
                "attribute": {
                  "type": "text",
                  "placeholder": "Job title",
                  "is_required": true,
                  "defaultValue": "",
                  "value": null,
                  "maxLength": 50,
                  "minLength": 1
                }
              },
              {
                "name": "bio",
                "label": "Biography",
                "field": "textarea",
                "multilanguage": true,
                "attribute": {
                  "rows": 3,
                  "placeholder": "Brief biography",
                  "cols": 50,
                  "max": 1000,
                  "min": 10,
                  "is_required": true,
                  "defaultValue": "",
                  "value": null
                }
              },
              {
                "name": "photo",
                "label": "Photo",
                "field": "media",
                "attribute": {
                  "accept": [
                    "image"
                  ],
                  "resolution": {
                    "minWidth": 200,
                    "maxWidth": 400,
                    "minHeight": 200,
                    "maxHeight": 400
                  }
                }
              },
              {
                "name": "social_links",
                "label": "Social Links",
                "field": "group",
                "attribute": {
                  "fields": [
                    {
                      "name": "linkedin",
                      "label": "LinkedIn",
                      "field": "input",
                      "attribute": {
                        "type": "url",
                        "placeholder": "https://linkedin.com/in/username",
                        "is_required": false,
                        "defaultValue": "",
                        "value": null,
                        "maxLength": 50,
                        "minLength": 1
                      }
                    },
                    {
                      "name": "email",
                      "label": "Email",
                      "field": "input",
                      "attribute": {
                        "type": "email",
                        "placeholder": "email@company.com",
                        "is_required": true,
                        "defaultValue": "",
                        "value": null
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      ],
      "block": "About us & team"
    },
    {
      "keyName": "pricing_plans+features_section",
      "label": "Pricing plans+features Section",
      "section": "3",
      "fields": [
        {
          "name": "status",
          "label": "Status",
          "field": "toggle",
          "attribute": {
            "caption": "Enable or disable the pricing section",
            "defaultValue": true,
            "value": null
          }
        },
        {
          "name": "section_title",
          "label": "Section Title",
          "field": "input",
          "multilanguage": true,
          "attribute": {
            "type": "text",
            "maxLength": 100,
            "placeholder": "Pricing Plans",
            "is_required": false,
            "defaultValue": "Pricing Plans",
            "value": null,
            "minLength": 1
          }
        },
        {
          "name": "subtitle",
          "label": "Subtitle",
          "field": "textarea",
          "multilanguage": true,
          "attribute": {
            "rows": 2,
            "placeholder": "Choose the plan that fits your needs",
            "cols": 50,
            "max": 1000,
            "min": 10,
            "is_required": true,
            "defaultValue": "",
            "value": null
          }
        },
        {
          "name": "pricing_plans",
          "label": "Pricing Plans",
          "field": "repeater",
          "attribute": {
            "min": 1,
            "max": 5,
            "caption": "Add pricing plans",
            "fields": [
              {
                "name": "name",
                "label": "Plan Name",
                "field": "input",
                "multilanguage": true,
                "attribute": {
                  "type": "text",
                  "maxLength": 50,
                  "placeholder": "Plan name",
                  "is_required": true,
                  "defaultValue": "",
                  "value": null,
                  "minLength": 1
                }
              },
              {
                "name": "price",
                "label": "Price",
                "field": "input",
                "multilanguage": false,
                "attribute": {
                  "type": "text",
                  "placeholder": "$99/month",
                  "is_required": true,
                  "defaultValue": "",
                  "value": null,
                  "maxLength": 50,
                  "minLength": 1
                }
              },
              {
                "name": "description",
                "label": "Description",
                "field": "textarea",
                "multilanguage": true,
                "attribute": {
                  "rows": 2,
                  "max": 500,
                  "cols": 10,
                  "is_required": false,
                  "caption": "Short description of the our services section",
                  "defaultValue": "",
                  "value": null,
                  "placeholder": "Plan description"
                }
              },
              {
                "name": "features",
                "label": "Features",
                "field": "repeater",
                "attribute": {
                  "min": 1,
                  "max": 10,
                  "caption": "Add feature items",
                  "fields": [
                    {
                      "name": "feature",
                      "label": "Feature",
                      "field": "input",
                      "multilanguage": true,
                      "attribute": {
                        "type": "text",
                        "placeholder": "Feature description",
                        "is_required": false,
                        "defaultValue": "",
                        "value": null,
                        "maxLength": 50,
                        "minLength": 1
                      }
                    }
                  ]
                }
              },
              {
                "name": "is_popular",
                "label": "Popular Plan",
                "field": "toggle",
                "attribute": {
                  "caption": "Mark as most popular plan",
                  "defaultValue": false,
                  "value": null
                }
              }
            ]
          }
        }
      ],
      "block": "Pricing plans+features"
    },
    {
      "keyName": "contact/support_section",
      "label": "Contact/support Section",
      "section": "4",
      "fields": [
        {
          "name": "status",
          "label": "Status",
          "field": "toggle",
          "attribute": {
            "caption": "Enable or disable the contact/support section",
            "defaultValue": true,
            "value": null
          }
        },
        {
          "name": "section_title",
          "label": "Section Title",
          "field": "input",
          "multilanguage": true,
          "attribute": {
            "type": "text",
            "maxLength": 100,
            "placeholder": "Enter contact/support section title",
            "is_required": false,
            "defaultValue": "",
            "value": null,
            "minLength": 1
          }
        },
        {
          "name": "content",
          "label": "Content",
          "field": "texteditor",
          "multilanguage": true,
          "attribute": {
            "type": "full",
            "rows": 10,
            "cols": 10,
            "is_required": false,
            "defaultValue": "",
            "value": null,
            "max": 255,
            "placeholder": "Enter contact/support content"
          }
        }
      ],
      "block": "Contact/support"
    }
  ]
}